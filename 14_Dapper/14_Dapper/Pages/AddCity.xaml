<Window x:Class="_14_Dapper.Pages.AddCity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_14_Dapper.Pages"
        mc:Ignorable="d"
        Title="AddCity" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название города:"/>
            <TextBox x:Name="CityNameTextBox" Margin="0 5"/>
            <TextBlock Text="Страна:"/>
            <ComboBox x:Name="CountryComboBox" DisplayMemberPath="Name" Margin="0 5"/>
            <Button Content="Сохранить" Click="SaveCity_Click" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
