<Window x:Class="_14_Dapper.Pages.AddPromotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_14_Dapper.Pages"
        mc:Ignorable="d"
        Title="AddPromotion" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Страна:"/>
        <ComboBox x:Name="CountryComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0 5"/>
        <TextBlock Text="Раздел:"/>
        <ComboBox x:Name="SectionComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0 5"/>
        <TextBlock Text="Скидка (%):"/>
        <TextBox x:Name="DiscountTextBox" Margin="0 5"/>
        <TextBlock Text="Дата истечения:"/>
        <DatePicker x:Name="ExpirationDatePicker" Margin="0 5"/>
        <Button Content="Сохранить" Click="SavePromotion_Click" Margin="0 10"/>
    </StackPanel>
</Window>
